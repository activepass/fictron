{
	"appId": "com.galiano.fictron",
	"productName": "Fictron",
	"mac": {
		"category": "public.app-category.productivity",
		"darkModeSupport": true,
		"type": "distribution"
	},
	"linux": {
		"target": ["tar.gz", "AppImage"],
		"category": "Utility"
	},
    "includeSubNodeModules": true,
	"directories": {
		"output": "production"
	},
	"files": [
        "package.json",
        "./dist/main.js",
        "./dist/preload.js",
        "./dist/*.js",
        {
            "from": "./renderer/build",
            "to": ""
        }
	]
}
